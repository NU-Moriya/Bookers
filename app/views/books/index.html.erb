<% if @book.errors.any? %>
<ul>
  <% @book.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>
<% end %>
<h1>Books</h1>

<table>
  <thread>
    <tr>
      <th>Title</th><th>Body</th><th colspan="3"></th>
    </tr>
  </thread>
  <tbody>
    <tr>
      <% @books.each do |book| %>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', books_path, method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
      <% end %>
    </tr>
  </tbody>
</table>
<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
<h3>Title</h3>
<%= f.text_field :title %>
<h3>Body</h3>
<%= f.text_area :body %>

<%= f.submit "Creat Book" %>
<% end %>
